extends base

block content 
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Sign Up
            form.form.signup--form
                .form__group.flex-row
                    label.form__label(for='name') Name
                    input#name.form__input(type='test', required)
                .form__group.flex-row
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group
                    label.form__label(for='role') Role
                    select#role.form__input(name='role' required)
                        option(value='user') User
                        option(value='admin') Admin
                        option(value='lead-guide') Lead Guide
                        option(value='guide') Tour Guide
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                    label.form__label(for='passwordConfirm') Conform Password
                    input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green.signup--button Register